                <div class="form-group">
                    <label class="col-md-2 control-label" for="Sport">Sport</label>
                    <div class="col-md-10">
                        <select class="form-control" ng-model="creategame.sportSelected" ng-options="sport as sport.label for sport in sports" required></select>
