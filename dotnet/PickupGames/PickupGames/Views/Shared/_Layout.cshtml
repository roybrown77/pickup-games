@using PickupGames.Models
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
        <meta name="viewport" content="width=device-width" />

        <title>@ViewBag.Title - Pickup Games</title>
        
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        
        <link href="@Url.Content("~/Content/simplePagination.css")" rel="stylesheet" type="text/css">

        <script src="@Url.Content("~/Scripts/jquery-2.1.1.min.js")"> </script>
        <script src="@Url.Content("~/Scripts/jquery.validate.js")"> </script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>        
        <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places" type="text/javascript"></script>  
        <script src="//cdnjs.cloudflare.com/ajax/libs/mustache.js/0.8.1/mustache.min.js" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.simplePagination.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/games-search.js")" type="text/javascript"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("pickup games logo here", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Create Game", "Create", "Games")</li>
                            <li>@Html.ActionLink("Games", "Index", "Games")</li>                                                            
                            <li><a>My Games</a></li>
                            <li><a>My Venues</a></li>
                            <li><a>My Fitness Tracker</a></li>
                            <li><a>Upcoming Games</a></li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body" style="width:100%;height:100%">
            @RenderSection("featured", required: false)
            @RenderBody()
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Pickup Games</p>
                </div>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
