@using PickupGames.Models
@using PickupGames.Objects

@model PickupGames.Models.GameSearchModel

@{
    ViewBag.Title = "Index";
}

<div id="searchgames" class="title">
    @using (Html.BeginForm("SearchMainPage", "Home", FormMethod.Post))
    {
        <div class="modal-body" style="float:left">
            @Html.ValidationSummary(false)

            @Html.TextBoxFor(m => m.SearchLocation, new { style = "width:30em;" })     
        </div>
        <div>
            <input type="submit" class="btn btn-large btn-primary" value="Search"/>
        </div>
    }
</div>

<script type="text/javascript">
    function initialize() {
        var input = (document.getElementById('SearchLocation')); 
        new google.maps.places.Autocomplete(input);
    }
    
    google.maps.event.addDomListener(window, 'load', initialize);
</script>

